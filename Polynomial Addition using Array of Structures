#include <stdio.h>
struct poly{int coeff, pow;};
int main(){
    struct poly a[10], b[10], c[10];
    int n1,n2,i,j,k=0;
    printf("Enter terms in P1: "); scanf("%d",&n1);
    for(i=0;i<n1;i++) scanf("%d%d",&a[i].coeff,&a[i].pow);
    printf("Enter terms in P2: "); scanf("%d",&n2);
    for(i=0;i<n2;i++) scanf("%d%d",&b[i].coeff,&b[i].pow);
    i=j=0;
    while(i<n1&&j<n2){
        if(a[i].pow==b[j].pow){c[k].coeff=a[i].coeff+b[j].coeff; c[k++].pow=a[i].pow; i++; j++;}
        else if(a[i].pow>b[j].pow){c[k++]=a[i++];}
        else c[k++]=b[j++];
    }
    while(i<n1) c[k++]=a[i++];
    while(j<n2) c[k++]=b[j++];
    printf("Result: ");
    for(i=0;i<k;i++) printf("%dx^%d ",c[i].coeff,c[i].pow);
}
